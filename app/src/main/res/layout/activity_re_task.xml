<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/potrai_mode"
    tools:context=".Re_Task">

    <fragment
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_re__task_list"
        class="com.project.madassignment2.Re_Task_list"
        android:id="@+id/re_list"
        />


    <fragment
        android:id="@+id/re_detail"
        class="com.project.madassignment2.Re_Task_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        tools:layout="@layout/fragment_re__task_detail" />


</LinearLayout>